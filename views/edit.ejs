<% include ./partials/header %>

<div class= "ui main text container segment">
    <div class="ui huge header">Edit <%=blog.title %></div>

    <form action="/blogs/<%= blog._id %>?_method=PUT" class="ui form" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="title" value="<%= blog.title %>">
        </div>
        
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="image" value="<%= blog.image %>" >
        </div>
        
        <div class="field">
            <label>Blog content</label>
            <textarea name="blog[body]"> <%= blog.body %> </textarea> 
        </div>
        
        <div class="field">
            <input type="submit" class="ui purple big basic button">
        </div>
    </form>
</div>

<% include ./partials/footer %>